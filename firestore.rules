rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ⚠️ 임시 테스트용 - 모든 접근 허용 (보안 없음)
    // TODO: 테스트 완료 후 원래 보안 규칙으로 복원할 것
    match /{document=**} {
      allow read, write: if true;
    }
    
    // 원래 보안 규칙 (테스트 후 복원용)
    /*
    // 사용자 프로필: 자신의 프로필만 읽기/쓰기 가능
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 주문: 자신의 주문만 읽기/쓰기 가능
    match /orders/{orderId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.userId || 
         request.auth.uid == request.resource.data.userId);
    }
    
    // 포인트 히스토리: 자신의 포인트 히스토리만 읽기/쓰기 가능
    match /pointHistory/{historyId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.userId || 
         request.auth.uid == request.resource.data.userId);
    }
    
    // QR 토큰: 로그인한 사용자만 읽기/쓰기 가능 (매장 스캔용)
    match /qrTokens/{tokenId} {
      allow read, write: if request.auth != null;
    }
    
    // 리뷰: 모든 사용자가 읽기 가능, 로그인한 사용자만 쓰기 가능, 작성자만 수정/삭제 가능
